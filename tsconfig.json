{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "lib": ["dom", "es6"],
      "jsx": "react",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
  }
  